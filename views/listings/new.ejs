<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row">
    <div class="col-8 offset-2 mt-5 rounded-4">
      <h2 class="fw-bold heading">Share Your Space with the World</h2>
      <form
        method="post"
        action="/listings"
        class="needs-validation pt-4"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            type="text"
            placeholder="Enter your propertyâ€™s name"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"
            >Description</label
          >
          <textarea
            rows="3px"
            name="listing[description]"
            type="text"
            placeholder="Describe your space and its features"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input
            name="listing[image][url]"
            type="file"
            class="form-control"
            placeholder="Upload high-quality photos of your space"
          />
        </div>

        <div>
          <label for="category" class="form-label">Choose Category</label>
          <div class="category-choose"></div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="rooms"
                  name="listing[category]"
                  value="Rooms"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="rooms"
                >
                  <i class="fa-solid fa-bed me-2"></i> Rooms
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="iconic-cities"
                  name="listing[category]"
                  value="Iconic-Cities"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="iconic-cities"
                >
                  <i class="fa-solid fa-mountain-city me-2"></i> Iconic Cities
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="mountains"
                  name="listing[category]"
                  value="Mountains"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="mountains"
                >
                  <i class="fa-solid fa-mountain-sun me-2"></i> Mountains
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="castles"
                  name="listing[category]"
                  value="Castles"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="castles"
                >
                  <i class="fa-brands fa-fort-awesome me-2"></i> Castles
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="boat"
                  name="listing[category]"
                  value="Boat"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="boat"
                >
                  <i class="fa-solid fa-sailboat me-2"></i> Boat
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="ski-in-out"
                  name="listing[category]"
                  value="Ski-in-out"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="ski-in-out"
                >
                  <i class="fa-solid fa-person-snowboarding me-2"></i>
                  Ski-in/out
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="apartment"
                  name="listing[category]"
                  value="Apartment"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="apartment"
                >
                  <i class="fa-solid fa-building me-2"></i> Apartment
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="new"
                  name="listing[category]"
                  value="New"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="new"
                >
                  <i class="fa-solid fa-key me-2"></i> New
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="woodlands"
                  name="listing[category]"
                  value="Woodlands"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="woodlands"
                >
                  <i class="fa-solid fa-tree-city me-2"></i> Woodlands
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="lake"
                  name="listing[category]"
                  value="Lake"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="lake"
                >
                  <i class="fa-solid fa-water me-2"></i> Lake
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="amazing-pools"
                  name="listing[category]"
                  value="Amazing-Pools"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="amazing-pools"
                >
                  <i class="fa-solid fa-person-swimming me-2"></i> Amazing Pools
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="cabins"
                  name="listing[category]"
                  value="Cabins"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="cabins"
                >
                  <i class="fa-solid fa-house me-2"></i> Cabins
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="camping"
                  name="listing[category]"
                  value="Camping"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="camping"
                >
                  <i class="fa-solid fa-campground me-2"></i> Camping
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="farm"
                  name="listing[category]"
                  value="Farm"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="farm"
                >
                  <i class="fa-solid fa-cow me-2"></i> Farm
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="arctic"
                  name="listing[category]"
                  value="Arctic"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="arctic"
                >
                  <i class="fa-solid fa-snowflake me-2"></i> Arctic
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="beach"
                  name="listing[category]"
                  value="Beach"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="beach"
                >
                  <i class="fa-solid fa-umbrella-beach me-2"></i> Beach
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="countryside"
                  name="listing[category]"
                  value="Countryside"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="countryside"
                >
                  <i class="fa-solid fa-house-chimney-window me-2"></i>
                  Countryside
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="bed-and-breakfasts"
                  name="listing[category]"
                  value="Bed-and-Breakfasts"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="bed-and-breakfasts"
                >
                  <i class="fa-solid fa-mug-hot me-2"></i> Bed & Breakfasts
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="campsite"
                  name="listing[category]"
                  value="Campsite"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="campsite"
                >
                  <i class="fa-solid fa-tents me-2"></i> Campsite
                </label>
              </div>
              <div class="form-check mb-3">
                <input
                  class="form-check-input"
                  type="radio"
                  id="historical-homes"
                  name="listing[category]"
                  value="Historical-Homes"
                  required
                />
                <label
                  class="form-check-label d-flex align-items-center"
                  for="historical-homes"
                >
                  <i class="fa-solid fa-landmark me-2"></i> Historical Homes
                </label>
              </div>
            </div>
          </div>
          <div class="invalid-feedback">Choose Category</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              class="form-control"
              type="number"
              placeholder="Set a nightly rate"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input
              name="listing[location]"
              type="text"
              class="form-control"
              placeholder="Agra, Uttar Pradesh"
              required
            />
            <div class="invalid-feedback">Location should be valid</div>
          </div>
        </div>
        <div class="mb-4">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" required class="form-control
          type="text" placeholder="India" />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
        <h6 class="mb-4 sub-heading fs-5 fw-bold">
          Showcase your space to travelers looking for their next adventure.
        </h6>
        <div class="d-flex justify-content-end">
          <button class="btn mb-5 text-white px-3 py-2 fs-5 fw-bold btn-color">
            Publish Your Space
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
